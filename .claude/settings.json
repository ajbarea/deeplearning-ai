{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read|Write|Edit|MultiEdit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"notify-hook.ps1\" '{\"message\":\"Tool executed\"}'"
          }
        ]
      }
    ]
  }
}